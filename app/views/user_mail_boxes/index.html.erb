<h1>Listing user_mail_boxes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_mail_boxes.each do |user_mail_box| %>
      <tr>
        <td><%= user_mail_box.name %></td>
        <td><%= user_mail_box.email %></td>
        <td><%= user_mail_box.login %></td>
        <td><%= link_to 'Show', user_mail_box %></td>
        <td><%= link_to 'Edit', edit_user_mail_box_path(user_mail_box) %></td>
        <td><%= link_to 'Destroy', user_mail_box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User mail box', new_user_mail_box_path %>
